{
  "manifest_version": 3,
  "name": "Magix",
  "version": "0.1.0",
  "description": "Reshape the Web Through Conversation.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "dist/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open Magix Panel"
  },
  "icons": {
    "16": "icons/wand-16.png",
    "48": "icons/wand-48.png",
    "128": "icons/wand-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/sidepanel/index.html",
        "dist/sidepanel/assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
